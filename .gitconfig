[user]
	email = timsullivanaz@gmail.com
	name = Timothy Sullivan
[push]
	default = nothing
[merge]
	keepBackup = false;
	tool = p4merge
[color]
	branch = auto
	diff = auto
	status = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
[core]
	excludesfile = ~/.gitignore_global
	ignorecase = false
	editor = vim -f
[mergetool "p4merge"]
	cmd = p4merge "$BASE" "$LOCAL" "$REMOTE" "$MERGED"
	keepTemporaries = false
	trustExitCode = false
	keepBackup = false
[alias]
	ci = commit -v
	co = checkout
	cob = checkout -b
	lg = log --format='%Cred%h%Creset %s %Cgreen(%cr) %C(blue)<%an>%Creset%C(yellow)%d%Creset'
	hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
