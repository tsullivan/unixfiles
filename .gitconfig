[user]
  name = Timothy Sullivan

[init]
	defaultBranch = main
[core]
  excludesfile = ~/.gitignore_global
  ignorecase = false
  editor = vim -f
	autocrlf = false
	filemode = false
	compression = 0

[push]
	default = current
[merge]
  keepBackup = false;
[pull]
	rebase = false
[fetch]
	prune = true
[branch]
  autosetuprebase = always

[diff]
  tool = difftastic
[difftool]
  prompt = false
[difftool "difftastic"]
  cmd = difft "$LOCAL" "$REMOTE"

[color]
  branch = auto
  diff = auto
  status = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold

[alias]
  co = checkout
  cob = checkout -b
  lg = log --format='%Cred%h%Creset %s %Cgreen(%cr) %C(blue)<%an>%Creset%C(yellow)%d%Creset'

[hub]
  protocol = ssh
